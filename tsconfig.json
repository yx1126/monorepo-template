{
    "include": [
        "**/*",
        "**/*.ts",
        "**/*.d.ts",
        "**/*.tsx",
        "**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "**/dist"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [],
        "paths": {}
    },
}
